    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/navigation_home"
    android:id="@+id/mobile_navigation">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.utsmobile.Home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home"/>

    <fragment
        android:id="@+id/navigation_plan"
        android:name="com.example.utsmobile.Plan.MealPlans"
        android:label="Meal Plan"
        tools:layout="@layout/fragment_plan"/>

    <fragment
        android:id="@+id/navigation_bookmark"
        android:name="com.example.utsmobile.exercise.ExerciseFragment"
        android:label="Exercise"
        tools:layout="@layout/fragment_exercise"/>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.utsmobile.Profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile"/>

