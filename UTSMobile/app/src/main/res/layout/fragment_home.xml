<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home.HomeFragment"
    android:layout_margin="20dp"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="40dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sophia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat"
            android:text="Hello, Good Moring"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toStartOf="@id/imageView" />

        <TextView
            android:id="@+id/tv_sophia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sophia!"
            android:fontFamily="@font/dm_sans"
            android:textStyle="bold"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/textView"
            app:layout_constraintStart_toStartOf="@id/textView"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notification"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageView"
            app:layout_constraintBottom_toBottomOf="@id/imageView" />

        <EditText
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/search_box"
            android:padding="10dp"
            android:drawableStart="@drawable/search"
            android:hint="Search"
            android:fontFamily="@font/poppins"
            android:drawablePadding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_sophia"
            app:layout_constraintStart_toStartOf="@id/textView"
            android:layout_marginTop="20dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            app:layout_constraintTop_toBottomOf="@+id/searchView"
            tools:layout_editor_absoluteX="25dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="163dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="10dp"
                android:elevation="1dp"
                app:cardBackgroundColor="#D48103"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="25dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/fit_young"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:elevation="4dp"
                        android:fontFamily="@font/bebas"
                        android:text="Fit Young Woman Doing Battle Stretch Training"
                        android:textColor="@color/white"
                        android:textSize="20dp"

                        android:textStyle="normal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.177" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/appCompatButton"
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/start_exercise"
                        android:elevation="2dp"
                        android:fontFamily="@font/dm_sans"
                        android:text="Start Exercise"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        app:layout_constraintCircleRadius="10dp"
                        app:layout_constraintEnd_toEndOf="@+id/fit_young"
                        app:layout_constraintStart_toStartOf="@+id/fit_young"
                        app:layout_constraintTop_toBottomOf="@+id/fit_young" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/barble"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:elevation="3dp"
                android:src="@drawable/damble"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="@+id/cardView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.86" />

            <ImageView
                android:id="@+id/girl"
                android:layout_width="200dp"
                android:layout_height="280dp"
                android:layout_marginStart="-25dp"
                android:elevation="3dp"
                android:src="@drawable/girlpink"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.55" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELECT YOUT GOAL"
            android:fontFamily="@font/bebas"
            android:textSize="23sp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            app:layout_constraintStart_toStartOf="@id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See All"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/goal"
            app:layout_constraintBottom_toBottomOf="@id/goal" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/goalrecycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/goal"
            app:layout_constraintStart_toStartOf="@id/textView"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CATEGORY"
            android:fontFamily="@font/bebas"
            android:textSize="23sp"
            app:layout_constraintTop_toBottomOf="@+id/goalrecycler"
            app:layout_constraintStart_toStartOf="@id/category" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See All"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/category"
            app:layout_constraintBottom_toBottomOf="@id/category" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categoryrecycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/category"
            app:layout_constraintStart_toStartOf="@id/textView"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/popular_card"
            app:layout_constraintStart_toStartOf="@id/category"
            app:layout_constraintTop_toBottomOf="@id/categoryrecycler"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"
           android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:id="@+id/popular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="@font/bebas"
                android:text="POPULAR EXERCISE" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See All"
                android:fontFamily="@font/montserrat"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="16dp"
                android:id="@+id/card_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/FullShot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/full_shot"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_margin="20dp"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/heart"
                    android:scaleY="1.5"
                    android:scaleX="1.5"
                    app:layout_constraintTop_toTopOf="@id/FullShot"
                    app:layout_constraintEnd_toEndOf="@id/FullShot"
                    android:background="@drawable/rectangle_heart" />

                <TextView
                    android:id="@+id/fullshot_heading"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/FullShot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:text="Full Shot Woman Stretching Arm"/>

                <TextView
                    android:id="@+id/beginner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fullshot_heading"
                    android:text="Beginner"
                    android:fontFamily="@font/montserrat"/>

                <ImageView
                    android:id="@+id/fullshot_clock"
                    android:layout_width= "wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clock"
                    android:layout_marginLeft="12dp"
                    app:layout_constraintTop_toTopOf="@id/beginner"
                    app:layout_constraintBottom_toBottomOf="@+id/beginner"
                    app:layout_constraintStart_toEndOf="@+id/beginner" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 Min"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginLeft="4dp"
                    app:layout_constraintStart_toEndOf="@id/fullshot_clock"
                    app:layout_constraintTop_toTopOf="@id/fullshot_clock"
                    app:layout_constraintBottom_toBottomOf="@id/fullshot_clock" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@+id/kcal1"/>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="13dp"
                android:id="@+id/card_athlete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/athlete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/athlete"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_margin="20dp"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/heart"
                    android:scaleY="1.5"
                    android:scaleX="1.5"
                    app:layout_constraintTop_toTopOf="@id/athlete"
                    app:layout_constraintEnd_toEndOf="@id/athlete"
                    android:background="@drawable/rectangle_heart" />

                <TextView
                    android:id="@+id/athlete_heading"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/athlete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:text="Athlete Practicing Monochrome"/>

                <TextView
                    android:id="@+id/beginner2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/athlete_heading"
                    android:text="Beginner"
                    android:fontFamily="@font/montserrat"/>

                <ImageView
                    android:id="@+id/athlete_clock"
                    android:layout_width= "wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clock"
                    android:layout_marginLeft="12dp"
                    app:layout_constraintTop_toTopOf="@id/beginner2"
                    app:layout_constraintBottom_toBottomOf="@+id/beginner2"
                    app:layout_constraintStart_toEndOf="@+id/beginner2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50 Min"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginLeft="4dp"
                    app:layout_constraintStart_toEndOf="@id/athlete_clock"
                    app:layout_constraintTop_toTopOf="@id/athlete_clock"
                    app:layout_constraintBottom_toBottomOf="@id/athlete_clock" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/meal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/popular_card"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:id="@+id/meal_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="@font/bebas"
                android:text="MEAL PLANS" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See All"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold" />
        </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="16dp"
                android:id="@+id/greek_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/greek_salad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/greeksalad"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/card1_heading_meal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/greek_salad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat"
                        android:text="Greek Salad with lettuce, green onion,"/>

                    <TextView
                        android:id="@+id/card1_meal_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/card1_heading_meal"
                        android:text="150 kcal"
                        android:fontFamily="@font/montserrat"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="16dp"
                android:id="@+id/salad_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/salad_fresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/saladfresh"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/card2_heading_meal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/salad_fresh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat"
                        android:textStyle="bold"
                        android:text="Athelete Praticing Monochrome"/>

                    <TextView
                        android:id="@+id/card2_text_meal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/card2_heading_meal"
                        android:text="270 kcal"
                        android:fontFamily="@font/montserrat"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:id="@+id/additional_exercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/meal"
            app:layout_constraintStart_toStartOf="parent" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:id="@+id/additional_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/bebas"
                    android:text="ADDITIONAL EXERCISE" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See All"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold" />
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/jumping_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/jumping_rope"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/jumping_rope"
                        android:background="@drawable/jumping_background"/>

                    <TextView
                        android:id="@+id/jumping_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/jumping_rope"
                        app:layout_constraintStart_toEndOf="@id/jumping_rope"
                        android:layout_marginStart="14dp"
                        android:fontFamily="@font/montserrat"
                        android:text="Exercise with Jumping Rope"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_marginTop="8dp"
                        android:id="@+id/kcal_jumping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/calories"
                        app:layout_constraintStart_toStartOf="@id/jumping_heading"
                        app:layout_constraintTop_toBottomOf="@id/jumping_heading" />


                    <TextView
                        android:id="@+id/kcal_jump"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/kcal_jumping"
                        app:layout_constraintTop_toTopOf="@id/kcal_jumping"
                        app:layout_constraintBottom_toBottomOf="@id/kcal_jumping"
                        android:text="110 Kcal"
                        android:fontFamily="@font/montserrat"/>

                    <ImageView
                        android:layout_marginTop="8dp"
                        android:id="@+id/clock_jump"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/clock"
                        android:layout_marginLeft="12dp"
                        app:layout_constraintStart_toEndOf="@id/kcal_jump"
                        app:layout_constraintTop_toBottomOf="@id/jumping_heading" />


                    <TextView
                        android:id="@+id/min_jump"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/clock_jump"
                        app:layout_constraintTop_toTopOf="@id/kcal_jumping"
                        app:layout_constraintBottom_toBottomOf="@id/kcal_jumping"
                        android:text="10 min"
                        android:fontFamily="@font/montserrat"/>

                    <TextView
                        android:id="@+id/beginner_jump"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/kcal_jumping"
                        app:layout_constraintStart_toStartOf="@id/jumping_heading"
                        android:layout_marginTop="4dp"
                        android:text="Beginner"
                        android:fontFamily="@font/montserrat"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/holding_jumping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/holding_jump"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/holding_jumping"
                        android:background="@drawable/handing_jump"/>

                    <TextView
                        android:id="@+id/holding_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/holding_jump"
                        app:layout_constraintStart_toEndOf="@id/holding_jump"
                        android:layout_marginStart="14dp"
                        android:fontFamily="@font/montserrat"
                        android:text="Exercise with Holding Jumping \nRope"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_marginTop="8dp"
                        android:id="@+id/kcal_holding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/calories"
                        app:layout_constraintStart_toStartOf="@id/holding_heading"
                        app:layout_constraintTop_toBottomOf="@id/holding_heading" />


                    <TextView
                        android:id="@+id/kcal2"
